<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0,0,0,0.8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(self.height * .05)
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .7}

    Button:
        font_name: "fonts/Eurostile.ttf"
        font_size: dp(self.height * 0.4)
        text: root.parent.menu_button1_title
        pos_hint: {"center_x": .5, "center_y": .525}
        size_hint: root.parent.button_width, .1
        on_press: root.parent.on_menu_button1_pressed()
        background_normal: ""
        background_color: 1, .25, .35, 1

    Button:
        font_name: "fonts/Eurostile.ttf"
        font_size: dp(self.height * 0.4)
        text: root.parent.menu_button2_title
        pos_hint: {"center_x": .5, "center_y": .400}
        size_hint: root.parent.button_width, .1
        on_press: root.parent.on_menu_button2_pressed()
        background_normal: ""
        background_color: 1, .25, .35, 1

    Button:
        font_name: "fonts/Eurostile.ttf"
        font_size: dp(self.height * 0.4)
        text: root.parent.menu_button3_title
        pos_hint: {"center_x": .5, "center_y": .275}
        size_hint: root.parent.button_width, .1
        on_press: root.parent.on_menu_button3_pressed()
        background_normal: ""
        background_color: 1, .25, .35, 1
